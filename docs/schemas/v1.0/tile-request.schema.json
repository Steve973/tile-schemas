{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tessera.dev/schemas/tile-request.schema.json",
  "title": "TileRequest",
  "description": "Schema for a runtime invocation of a Tile request.",
  "type": "object",
  "properties": {
    "requestId": {
      "type": "string",
      "description": "Unique identifier for this invocation (correlation ID)."
    },
    "description": {
      "type": "string",
      "description": "Optional description of this request."
    },
    "responseUri": {
      "type": "string",
      "description": "URI or topic where responses should be delivered."
    },
    "request": {
      "type": "string",
      "description": "ID of the Tile request definition to invoke."
    },
    "params": {
      "type": "object",
      "description": "Parameter values for this invocation.",
      "additionalProperties": {
        "$ref": "tile-request-param-value.schema.json"
      }
    }
  },
  "required": ["requestId", "request", "params"],
  "additionalProperties": false
}
